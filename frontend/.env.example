# ==============================================================================
# BACKEND API
# ==============================================================================

# API Gateway URL
NEXT_PUBLIC_API_URL=http://localhost:4000

# WebSocket Server URL
NEXT_PUBLIC_WS_URL=ws://localhost:4001

# Production URLs (use HTTPS/WSS!)
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_WS_URL=wss://ws.yourdomain.com

# ==============================================================================
# SOLANA
# ==============================================================================

# Network: devnet | testnet | mainnet-beta | localnet
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC URL
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# For production, use paid RPC for better performance:
# NEXT_PUBLIC_SOLANA_RPC_URL=https://your-project.helius-rpc.com/?api-key=your-api-key
# OR
# NEXT_PUBLIC_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-api-key

# Program IDs (must match backend)
NEXT_PUBLIC_PROGRAM_ID=7h3gXfBfYFueFVLYyfL5Qo1QGsf4GQUfW96FKVgnUsJS
NEXT_PUBLIC_ZMART_PROPOSAL_PROGRAM_ID=3XDU9r97qqJRdgqKJEWDYSJesPAUbLqsejXus4WLuhAQ

# ==============================================================================
# DATABASE (Supabase - Client-side Access)
# ==============================================================================

# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ==============================================================================
# WALLET CONFIGURATION
# ==============================================================================

# Supported wallets (comma-separated)
NEXT_PUBLIC_WALLETS=phantom,solflare,backpack,coinbase

# Auto-connect to last used wallet
NEXT_PUBLIC_AUTO_CONNECT=true

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable/disable features
NEXT_PUBLIC_FEATURE_DISCUSSIONS=true
NEXT_PUBLIC_FEATURE_WEBSOCKET=true
NEXT_PUBLIC_FEATURE_REALTIME_UPDATES=true
NEXT_PUBLIC_FEATURE_DARK_MODE=true

# V2 Features (not yet implemented)
NEXT_PUBLIC_FEATURE_IPFS_SNAPSHOTS=false
NEXT_PUBLIC_FEATURE_TWITTER_AUTH=false
NEXT_PUBLIC_FEATURE_REPUTATION_SYSTEM=false

# ==============================================================================
# UI CONFIGURATION
# ==============================================================================

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ZMART
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized Prediction Markets on Solana

# Default theme
NEXT_PUBLIC_DEFAULT_THEME=light  # light | dark | system

# Markets per page
NEXT_PUBLIC_MARKETS_PER_PAGE=20

# Trades history limit
NEXT_PUBLIC_TRADES_HISTORY_LIMIT=50

# Discussion comments per page
NEXT_PUBLIC_COMMENTS_PER_PAGE=50

# ==============================================================================
# AUTHENTICATION
# ==============================================================================

# Token cache duration (1 hour = 3600000ms)
NEXT_PUBLIC_AUTH_TOKEN_LIFETIME=3600000

# Auto-refresh token before expiry (5 minutes = 300000ms)
NEXT_PUBLIC_AUTH_REFRESH_BEFORE=300000

# ==============================================================================
# WEBSOCKET CONFIGURATION
# ==============================================================================

# Reconnection settings
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=1000  # Initial interval (ms), uses exponential backoff

# Heartbeat interval (30 seconds)
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL=30000

# Fallback to polling after max reconnect attempts
NEXT_PUBLIC_WS_POLLING_FALLBACK=true
NEXT_PUBLIC_WS_POLLING_INTERVAL=5000  # 5 seconds

# ==============================================================================
# TRADING CONFIGURATION
# ==============================================================================

# Default slippage tolerance (percentage)
NEXT_PUBLIC_DEFAULT_SLIPPAGE=5  # 5%

# Min/max slippage allowed
NEXT_PUBLIC_MIN_SLIPPAGE=0.1
NEXT_PUBLIC_MAX_SLIPPAGE=20

# Transaction confirmation timeout (30 seconds)
NEXT_PUBLIC_TX_CONFIRMATION_TIMEOUT=30000

# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics
NEXT_PUBLIC_GA_ID=

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# ==============================================================================
# SOCIAL & SHARING
# ==============================================================================

# Social media
NEXT_PUBLIC_TWITTER_HANDLE=@zmart_markets
NEXT_PUBLIC_DISCORD_INVITE=https://discord.gg/zmart

# ==============================================================================
# SEO & METADATA
# ==============================================================================

# Site title format
NEXT_PUBLIC_SITE_TITLE_TEMPLATE=%s | ZMART

# Default OG image
NEXT_PUBLIC_OG_IMAGE=/og-image.png

# ==============================================================================
# IPFS (for V2 features)
# ==============================================================================

# IPFS Gateway (read-only)
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud

# ==============================================================================
# DEVELOPMENT ONLY
# ==============================================================================

# Show debug info in UI
NEXT_PUBLIC_DEBUG_MODE=false

# Skip transaction confirmations (DANGEROUS - dev only!)
NEXT_PUBLIC_SKIP_TX_CONFIRMATION=false

# Mock WebSocket (for testing without backend)
NEXT_PUBLIC_MOCK_WEBSOCKET=false

# ==============================================================================
# BUILD & DEPLOYMENT
# ==============================================================================

# Next.js configuration
NEXT_TELEMETRY_DISABLED=1

# Vercel deployment (auto-populated)
# VERCEL_URL=
# VERCEL_ENV=development
