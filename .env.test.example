# ZMART Real Blockchain E2E Testing Configuration
# Copy this file to .env.test and fill in your test wallet details
# NEVER commit .env.test to git!

# ==============================================================================
# TEST WALLET CONFIGURATION
# ==============================================================================
# Generate a test wallet with: solana-keygen new --outfile ~/.config/solana/test-wallet.json
# Get the private key array with: cat ~/.config/solana/test-wallet.json
# Get the public key with: solana-keygen pubkey ~/.config/solana/test-wallet.json

# Test wallet private key as JSON array (64 numbers)
TEST_WALLET_PRIVATE_KEY='[1,2,3,...,64]'

# Test wallet public key (base58 string)
TEST_WALLET_PUBLIC_KEY='YourPublicKeyHere...'

# ==============================================================================
# SOLANA CONFIGURATION
# ==============================================================================
SOLANA_CLUSTER='devnet'
SOLANA_RPC_URL='https://api.devnet.solana.com'

# Alternative faster RPC (optional)
# SOLANA_RPC_URL='https://devnet.helius-rpc.com/?api-key=YOUR_KEY'

# ==============================================================================
# ZMART PROGRAM IDS
# ==============================================================================
ZMART_PROGRAM_ID='7h3gXfBfYFueFVLYyfL5Qo1QGsf4GQUfW96FKVgnUsJS'

# Test market ID (must be ACTIVE state for buy/sell tests)
TEST_MARKET_ID='HFaHHLFukTcA15khhvssYa7fTFmkzxTDsLih2LGVWCrM'

# ==============================================================================
# SUPABASE CONFIGURATION (Test Instance)
# ==============================================================================
# Use a dedicated test database or test schema to avoid polluting production data
NEXT_PUBLIC_SUPABASE_URL='https://your-test-project.supabase.co'
NEXT_PUBLIC_SUPABASE_ANON_KEY='your-test-anon-key'

# ==============================================================================
# PHANTOM WALLET CONFIGURATION
# ==============================================================================
# Path to Phantom extension directory
# Download from: https://chrome.google.com/webstore/detail/phantom/bfnaelmomeimhlpmgjnjophhpkkoljpa
PHANTOM_EXTENSION_PATH='/path/to/phantom-extension'

# Phantom extension ID (usually constant)
PHANTOM_EXTENSION_ID='bfnaelmomeimhlpmgjnjophhpkkoljpa'

# ==============================================================================
# TEST EXECUTION SETTINGS
# ==============================================================================
# Timeout for blockchain confirmations (milliseconds)
BLOCKCHAIN_CONFIRMATION_TIMEOUT=60000

# Timeout for transaction building (milliseconds)
TRANSACTION_BUILD_TIMEOUT=10000

# Enable verbose console logging
VERBOSE_LOGGING=true

# Take screenshots on all steps (not just failures)
SCREENSHOT_ON_SUCCESS=false

# Record video for all tests (not just failures)
VIDEO_ON_SUCCESS=false
