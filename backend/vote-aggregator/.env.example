# Vote Aggregator Service - Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
PROGRAM_ID=7h3gXfBfYFueFVLYyfL5Qo1QGsf4GQUfW96FKVgnUsJS

# Backend Authority Wallet
BACKEND_AUTHORITY_KEYPAIR_PATH=~/.config/solana/backend-authority.json

# Cron Configuration
AGGREGATION_CRON_SCHEDULE=*/5 * * * *  # Every 5 minutes
ENABLE_CRON=true

# Vote Thresholds
PROPOSAL_APPROVAL_THRESHOLD=70  # 70% likes required
DISPUTE_THRESHOLD=60  # 60% agree required

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per minute

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
