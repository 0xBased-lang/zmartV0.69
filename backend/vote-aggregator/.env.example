# Vote Aggregator Service - Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
PROGRAM_ID=7h3gXfBfYFueFVLYyfL5Qo1QGsf4GQUfW96FKVgnUsJS

# Deployer Wallet (base58-encoded secret key)
DEPLOYER_SECRET_KEY=your_deployer_secret_key_here

# Vote Thresholds
PROPOSAL_THRESHOLD=70  # 70% likes required
DISPUTE_THRESHOLD=60  # 60% support required
MIN_VOTES_REQUIRED=10  # Minimum votes before checking threshold

# Transaction Retry
RETRY_ATTEMPTS=3  # Max retry attempts
RETRY_DELAY=1000  # Base delay in ms for exponential backoff

# Cache Configuration
CACHE_TTL=30  # Cache TTL in seconds

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per minute

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
