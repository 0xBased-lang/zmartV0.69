# Event Indexer Service - Environment Configuration

# Server Configuration
PORT=3002
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
PROGRAM_ID=7h3gXfBfYFueFVLYyfL5Qo1QGsf4GQUfW96FKVgnUsJS

# Helius Configuration
HELIUS_API_KEY=your-helius-api-key
HELIUS_WEBHOOK_URL=https://your-domain.com/api/webhooks/helius
HELIUS_WEBHOOK_SECRET=your-webhook-secret

# Indexing Configuration
INDEXING_ENABLED=true
INDEXING_START_SLOT=0  # 0 = current slot, or specific slot number
BATCH_SIZE=100  # Number of events to process per batch
RECONCILIATION_INTERVAL=3600000  # 1 hour in ms

# Error Handling
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=1000  # Base delay in ms
ENABLE_DEAD_LETTER_QUEUE=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=1000  # 1000 requests per minute

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
