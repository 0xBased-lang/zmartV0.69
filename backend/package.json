{
  "name": "zmart-backend",
  "version": "0.69.0",
  "description": "ZMART Backend Services - Vote aggregation, IPFS, and API Gateway",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern='__tests__/services'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "ts-node scripts/test-db-connection.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "validate:week2": "ts-node scripts/validate-week2-simple.ts",
    "deploy:market-monitor": "ts-node scripts/deploy-market-monitor.ts",
    "monitor:run": "ts-node -e \"import { MarketMonitor } from './src/services/market-monitor/monitor'; new MarketMonitor(...).run();\""
  },
  "keywords": [
    "solana",
    "prediction-markets",
    "backend",
    "api"
  ],
  "author": "ZMART Team",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/web3.js": "^1.95.0",
    "@supabase/supabase-js": "^2.38.0",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "ipfs-http-client": "^60.0.1",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "tweetnacl": "^1.0.3",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
