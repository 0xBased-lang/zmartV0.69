# ============================================================
# ZMART v0.69 - Environment Variables Template
# ============================================================
# Copy this file to .env.local for local development
# NEVER commit actual .env files to git!
#
# Security Note: Store production secrets in AWS Secrets Manager
# ============================================================

# ============================================================
# SOLANA CONFIGURATION
# ============================================================

# Network: localnet | devnet | mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC Endpoint
# Local: http://localhost:8899
# Devnet: https://api.devnet.solana.com
# Mainnet: Use private RPC (Triton, Helius, QuickNode)
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com

# Program IDs (deployed program addresses)
NEXT_PUBLIC_ZMART_CORE_PROGRAM_ID=
NEXT_PUBLIC_ZMART_PROPOSAL_PROGRAM_ID=

# Token Mint (SPL token for betting, 6 decimals like pump.fun)
NEXT_PUBLIC_TOKEN_MINT=

# Admin wallet (for emergency pause, config updates)
ADMIN_WALLET_ADDRESS=

# ============================================================
# SUPABASE CONFIGURATION
# ============================================================

# Public keys (safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key (BACKEND ONLY - NEVER expose to frontend!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================
# HELIUS CONFIGURATION (Event Indexer Webhooks)
# ============================================================

# Helius API Key (from https://www.helius.dev/dashboard)
HELIUS_API_KEY=your_helius_api_key_here

# Webhook URL (public HTTPS endpoint for receiving events)
# Production: https://api.yourdomain.com/api/webhooks/helius
# Development: Use ngrok for local testing
HELIUS_WEBHOOK_URL=https://your-domain.com/api/webhooks/helius

# Webhook Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
HELIUS_WEBHOOK_SECRET=generate_random_32_byte_hex_string_here

# Webhook ID (will be generated after registration)
HELIUS_WEBHOOK_ID=

# ============================================================
# BACKEND AUTHORITY (Vote Aggregation, Auto-Resolution)
# ============================================================

# Backend authority wallet private key
# WARNING: Keep this secret! In production: AWS Secrets Manager
# Format: Base58 string or JSON array [numbers...]
BACKEND_AUTHORITY_PRIVATE_KEY=

# ============================================================
# IPFS CONFIGURATION (Discussion Snapshots)
# ============================================================

# IPFS service (Infura, Pinata, or self-hosted)
IPFS_API_ENDPOINT=https://ipfs.infura.io:5001
IPFS_API_KEY=
IPFS_API_SECRET=

# Or use Pinata
# PINATA_API_KEY=
# PINATA_SECRET_API_KEY=

# ============================================================
# MONITORING & OBSERVABILITY (Production)
# ============================================================

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# DataDog (optional - advanced monitoring)
DATADOG_API_KEY=
DATADOG_APP_KEY=

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================

# Environment: local | development | staging | production
NODE_ENV=development

# Application URL (for CORS, redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable debug logging (true | false)
DEBUG_LOGGING=true

# ============================================================
# FEATURE FLAGS (Optional - Gradual Rollout)
# ============================================================

# Enable specific features
FEATURE_VOTING_ENABLED=true
FEATURE_DISPUTES_ENABLED=true
FEATURE_DISCUSSIONS_ENABLED=true

# ============================================================
# RATE LIMITING (Optional)
# ============================================================

# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ============================================================
# DATABASE (If not using Supabase connection string above)
# ============================================================

# Direct PostgreSQL connection (alternative to Supabase SDK)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================================
# TESTING (Test Environment Only)
# ============================================================

# Test wallet private key (NEVER use real funds!)
TEST_WALLET_PRIVATE_KEY=

# Test RPC (use localnet for tests)
TEST_RPC_ENDPOINT=http://localhost:8899

# ============================================================
# CI/CD (GitHub Secrets)
# ============================================================

# These should be set in GitHub repository secrets, not in .env:
# - DEVNET_DEPLOYER_KEYPAIR (for auto-deployment)
# - MAINNET_DEPLOYER_KEYPAIR (for manual production deploy)
# - SUPABASE_SERVICE_ROLE_KEY (for migrations)
# - AWS_ACCESS_KEY_ID (for secrets manager access)
# - AWS_SECRET_ACCESS_KEY (for secrets manager access)
