{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["mocha", "chai", "node"]
  },
  "include": ["tests/**/*.ts", "backend/**/*.ts"],
  "exclude": ["node_modules", "dist", "target"]
}
